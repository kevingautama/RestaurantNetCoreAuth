    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6">
                <h5><b>Order No : {{detailorder.OrderID}}</b></h5>
            </div>
            <div class="col-md-6">
                <h5><em>{{detailorder.OrderDate}}</em></h5>
            </div>
        </div>
        <table class="table table-hover">
            <tr>
                <th>
                    Menu
                </th>

                <th>
                    Qty
                </th>
                <th>
                    Harga
                </th>
                <th>
                    Total
                </th>

                
            </tr>
            <tr ng-repeat="item in detailorder.OrderItem">
                <td>{{item.MenuName}}</td>

                <td>{{item.Qty}}</td>
                <td>{{item.Price}}</td>
                <td>{{item.Price*item.Qty}}</td>
            </tr>

        </table>
